[*]
indent_size = 4
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false

[*.{yml,yaml,toml}]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.{js,json}]
indent_size = 2
indent_style = space

[*.go]
indent_size = 4
indent_style = tab

[*.{sh,zsh}]
indent_size = 2
indent_style = space
